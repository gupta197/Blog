<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head'); %>
</head>

<body>
    <header>
        <%- include('header',{title:title,isUserLoggedIn: false, name:""}); %>
    </header>
    <main>
        <div class="container">
            <div class="row pt-2">
                <div class="p-4 ">
                    <div class="row">
                        <div class="col-12">
                            <% if(error.length> 0){ %>
                                <div class="pb-4 mb-3 text-center">
                                    <strong class="text-red">
                                        <%= error %>
                                    </strong>
                                </div>
                                <% } %>
                                    <form class="row g-3" action="/register" method="post">
                                        <div class="mb-3 row">
                                            <label for="staticUsername" class="col-sm-2 col-form-label">Username</label>
                                            <div class="col-sm-10">
                                              <input type="text" name="username" class="form-control" id="inputEmail" min="4" max="32" maxlength="32" minlength="4">
                                            </div>
                                          </div>
                                        <div class="mb-3 row">
                                            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                                            <div class="col-sm-10">
                                              <input type="email" name="email" class="form-control" id="inputEmail">
                                            </div>
                                          </div>
                                          <div class="mb-3 row">
                                            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                                            <div class="col-sm-10">
                                              <input type="password" name="password" class="form-control" id="inputPassword" min="8" minlength="8" max="20" maxlength="20">
                                            </div>
                                          </div>
                                          <div class="mb-3 row" style="    display: flex; justify-content: center;">
                                            <button class="btn btn-primary mb-3 col-sm-2 col-form-label" type="submit" name="submit" aria-label="submit" style="margin-right: 10px;"> Submit</button> 
                                            <a href="/login" class="btn btn-default mb-3 col-sm-2 col-form-label border">Login</a> <br />
                                          </div>
                                        
                                    </form>
                                    <% if(message.length> 0){ %>
                                        <div><strong class="text-success">
                                                <%= message %>
                                            </strong></div>
                                        <% } %>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
    </main>
    <footer>
        <%- include('footer'); %>
    </footer>
</body>

</html>