<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head'); %>
</head>

<body>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <%- include('header',{title:title,isUserLoggedIn: false, name:""}); %>
                </div>
            </div>
            <div class="row pb-2 pt-2">
                <div class="col-12">
                    <h1 class="text-center">
                        Welcome Back <%= username %>
                    </h1>
                </div>
            </div>
            <!-- Error Container -->
            <% if(error.length> 0){ %>
                <div class="row pt-2 pb-4 mb-3 text-center">
                    <div class="col-12 text-center">
                            <strong class="text-red">
                                    <%= error %>
                            </strong>
                    </div>
                </div>
            <% } %>
            <!-- Error Container -->
            <!-- Change Password Form  -->
            <div class="row pb-2 pt-2">
                <div class="col-12 text-center">
                    <form class="row g-3" action="/user/changePassword" method="post">
                        <div class="mb-3 row">
                            <label for="staticcurrentPassword" class="col-sm-2 col-form-label">Current Password</label>
                            <div class="col-sm-10">
                              <input type="password" name="currentPassword" class="form-control" id="currentPassword" placeholder="Current Password" aria-placeholder="Current Password"  min="8" minlength="8" max="20" maxlength="20">
                            </div>
                          </div>
                          <div class="mb-3 row">
                            <label for="newPassword" class="col-sm-2 col-form-label">New Password</label>
                            <div class="col-sm-10">
                              <input type="password" name="password" class="form-control" id="newPassword" placeholder="New Password" aria-placeholder="New Password"  min="8" minlength="8" max="20" maxlength="20">
                            </div>
                          </div>
                          <div class="mb-3 row" style="    display: flex; justify-content: center;">
                            <button class="btn btn-primary mb-3 col-sm-2 col-form-label" type="submit" name="submit" aria-label="submit" style="margin-right: 10px;"> Change Password</button> 
                          </div>
                        
                    </form>
                </div>
            </div>
            <!-- Change Password Form -->
            <!-- Change User Name form -->
            <div class="row pb-2 pt-2">
                <div class="col-12 text-center">
                    <form class="row g-3" action="/user/updateUserName" method="post">
                        <div class="mb-3 row">
                            <label for="staticnewName" class="col-sm-2 col-form-label">newName</label>
                            <div class="col-sm-10">
                              <input type="text" name="newName" class="form-control" id="inputnewName">
                            </div>
                          </div>
                          <div class="mb-3 row" style="    display: flex; justify-content: center;">
                            <button class="btn btn-primary mb-3 col-sm-2 col-form-label" type="submit" name="submit" style="margin-right: 10px;" aria-label="Update Username"> Update Username</button> 
                          </div>
                        
                    </form>
                </div>
            </div>
            <!-- Change User Name form -->
            <!-- Delete user code -->
            <div class="row pb-2 pt-2">
                <div class="col-12 text-center">
                    <form class="row g-3" action="/user/deleteUser" method="post">
                          <div class="mb-3 row">
                            <label for="inputPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                            <div class="col-sm-10">
                              <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Confirm Password">
                            </div>
                          </div>
                          <div class="mb-3 row" style="    display: flex; justify-content: center;">
                            <button class="btn btn-primary mb-3 col-sm-2 col-form-label" type="submit" name="submit" aria-label="submit" style="margin-right: 10px;"> DeActivate</button>
                          </div>
                        
                    </form>
                </div>
            </div>
            <!-- Delete user code -->
            <!-- Message Container -->
            <% if(message.length> 0){ %>
            <div class="row pb-2 pt-2">
                <div class="col-12 text-center">
                        <strong class="text-success">
                            <%= message %>
                        </strong>
                    </div>
                </div>
                <% } %>
            <!-- Message Container -->
                <!-- Footer Container -->
            <div class="row">
                <div class="col-12">
                    <%- include('footer'); %>
                </div>
            </div>
            <!-- Footer Container-->
        </div>
</body>

</html>